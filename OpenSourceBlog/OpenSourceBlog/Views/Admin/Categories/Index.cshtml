@model IEnumerable<OpenSourceBlog.Database.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryRowId }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.CategoryRowId }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryRowId }, new { @class = "btn btn-secondary" })
        </td>
    </tr>
}

</table>
