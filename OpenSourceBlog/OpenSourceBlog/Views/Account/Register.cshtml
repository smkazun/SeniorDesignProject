@model OpenSourceBlog.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Register.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h2 align="center">@ViewBag.Title</h2>
    <h4 align="center">Create a new account</h4>
    <hr />

    <div class="form-group" align="center">
        <div class="row">
            <div class="input-icons">
                <i class="fa fa-envelope fa-lg"></i>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br style="line-height: 8px;" />

    <div class="form-group" align="center">
        <div class="row">
            <div class="input-icons">
                <i class="fa fa-lock fa-lg"></i>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br style="line-height: 8px;" />

    <div class="form-group" align="center">
        <div class="row">
            <div class="input-icons">
                <i class="fa fa-lock fa-lg"></i>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input", placeholder = "Confirm Password" })
            </div>
        </div>
    </div>


    <div class="form-group" align="center">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-dark registerButton" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
