@model IEnumerable<OpenSourceBlog.Database.Models.PostTags>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminNavBar.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PostTagId }, new { @class = "btn btn-secondary"})
            @Html.ActionLink("Details", "Details", new { id=item.PostTagId }, new { @class = "btn btn-secondary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.PostTagId }, new { @class = "btn btn-secondary" })
        </td>
    </tr>
}

</table>
